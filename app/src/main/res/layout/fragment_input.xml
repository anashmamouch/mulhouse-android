<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
style="@style/layout_body"
tools:context="com.otipass.mulhouse.InputFragment">
    <LinearLayout
        android:id="@+id/header"
        style="@style/layout_header.center"
        >
        <ImageView
            android:id="@+id/img_header"
            style="@style/image_header.input"
            />
        <TextView
            android:id="@+id/header_text"
            style="@style/header_text.input"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/layout_body.wrap" >
        <TextView
            android:id="@+id/title_message_text"
            style="@style/title_message_text.input" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/Scan_manually_layout_1"
        style="@style/layout_content"
        >
        <AutoCompleteTextView
            android:id="@+id/enter_serial"
            style="@style/edit_text_init.input"
            >
        </AutoCompleteTextView>
        <Button
            android:id="@+id/btn_Valid"
            style="@style/button_connexion.input"
            />
    </RelativeLayout>



</LinearLayout>
