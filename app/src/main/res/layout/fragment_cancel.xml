<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_body"
    tools:context="com.otipass.mulhouse.CancelFragment">
    <LinearLayout
        style="@style/layout_header.center"
        >
        <ImageView
            android:id="@+id/img_header"
            style="@style/image_header.scan"
            />
        <TextView
            android:id="@+id/header_text"
            style="@style/header_text.cancel"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_cancel"
        style="@style/layout_message"
        >
        <TextView
            android:id="@+id/cancel_text"
            style="@style/exception_text"
            />
        <Button
            android:id="@+id/btnCancel"
            style="@style/button_single.cancel"
            />
    </LinearLayout>


</LinearLayout>
